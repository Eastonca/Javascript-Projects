// Ternary operator
let age = 19;
let message = age >= 18 ? "you are an adult" : "you are a minor";

// Swtich
let day = 1;
switch(day){
    case 1:
        console.log("Monday");
        break;
    case 2:
        console.log("Tuesday");
        break;
    default: 
        console.log("BE SCARED!");
}

let testScore = 10;
let letterGrade = "F";
switch(true){
    case testScore >= 90:
        letterGrade = "A";
        break;
    case testScore >= 60:
        letterGrade = "B";
        break;
}

// String
charAt(0);
lastIndexOf("o");
length;
trim(); //remove whitespace
toUppperCase();
toLowerCase();
startsWith("A"); //does it start with "A"
replaceAll("-",""); //replace "-" with nothing
padStart(15, "0") // pad the string to 15 characters long with 0

// String slicing
const fullName = "Bro Code";
let firstChar = fullName.slice(0, 1);
let lastChar = fullName.slice(-1); // negative number begins at the end

let firstName = fullName.slice(0, fullName.indexOf(" "));
let lastName = fullName.slice(fullName.indexOf(" ") + 1);

const email = "fries@gmail.com";

let username = email.slice(0, email.indexOf("@"));
let extension = email.slice(email.indexOf("@") + 1);

// No method chaining 
username = username.trim();
let letter = username.charAt(0);
letter = letter.toUpperCase();

let extraChars = username.slice(1);
extraChars = extraChars.toLowerCase();
username = letter + extraChars;

// Method chaining
username = username.trim().charAt(0).toUpperCase() + username.trim().slice(1).toLowerCase();

// Logical operators
// And = &&, or = ||, Not = !

// Strict Equality
/// === strict equality operator (values & datatype must be equal)

